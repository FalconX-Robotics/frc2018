package org.usfirst.frc.team6662.robot.commands;

import edu.wpi.first.wpilibj.command.CommandGroup;

public class AutoSwitch extends CommandGroup {

	public static final double MOVE_SPEED = 0.7;
	char switchSide;
	
    public AutoSwitch(char position, char allianceSwitch) {
    	
    	switchSide = allianceSwitch;
    	
    	addSequential(DriveForward(60, MOVE_SPEED));//all distances in inches
    	addSequential(TurnAngle(trueAngle(90)), MOVE_SPEED);
    	if (position == 'a'){
    		addSequential(DriveForward(trueDistance(270)), MOVE_SPEED);//*
    	}
    	else if (position == 'b'){
    		addSequential(DriveForward(trueDistance(180)), MOVE_SPEED);//*
    	}
    	else if (position == 'c'){
    		addSequential(DriveForward(trueDistance(90)), MOVE_SPEED);//*
    	}
    	addSequential(TurnAngle(trueAngle(-90)), MOVE_SPEED);
    	addSequential(DriveForward(108), MOVE_SPEED);
    	addSequential(TurnAngle(trueAngle(-90)), MOVE_SPEED);
    	addSequential(DriveForward(90), MOVE_SPEED);
    }
    
    double trueAngle(double angle){
    	if(switchSide == 'R'){
    		return angle;
    	}
    	else{
    		return -1*angle;
    	}
    }
    
    double trueDistance(double distance){
    	if(switchSide == 'R'){
    		return distance;
    	}
    	else{
    		return 30 - distance;
    	}
    }
}
//* measurements undetermined
